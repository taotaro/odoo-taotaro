<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_schedule_form" model="ir.ui.view">
    <field name="name">interest.schedule.form</field>
    <field name="model">interest.schedule</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="interest_calculation_time" widget="float_time"/>
            </group>
            <group>
              <field name="credit_interest_time" widget="float_time"/>
              <field name="credit_interest_day"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_schedule_tree" model="ir.ui.view">
    <field name="name">interest.schedule.tree</field>
    <field name="model">interest.schedule</field>
    <field name="arch" type="xml">
      <tree>
        <field name="interest_calculation_time" widget="float_time"/>
        <field name="credit_interest_time" widget="float_time"/>
        <field name="credit_interest_day"/>
      </tree>
    </field>
  </record>

  <record id="action_schedule" model="ir.actions.act_window">
    <field name="name">Interest Schedule</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">interest.schedule</field>
    <field name="view_mode">tree,form</field>
       <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Set up the interest schedule!
      </p>
    </field>
  </record>

</odoo>