<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="term_account_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <table style="table-layout:fixed; table-width:full">
            <tr>
              <td>Yue Hwa Chinese Products Saving System</td>
              <td><t t-esc="form['date_to']"/></td>
            </tr>
          </table>
          <center>
            <h6>Term Account Summary</h6>
          </center>
          <table class="table table-bordered" style="table-layout:fixed">
            <tr>
              <th>Acc. No.</th>
              <th>Name</th>
              <th>Balance</th>
              <th>Last Int. Crdt.</th>
              <th>Interest Tax</th>
              <th>After Tax</th>
            </tr>
            <t t-foreach="accounts" t-as="line">
              <tr>
                <td><t t-esc="line['account_no']"/></td>
                <td><t t-esc="line['name']"/></td>
                <td><t t-esc="line['total_principal']"/></td>
                <td><t t-esc="line['total_interest']"/></td>
                <td><t t-esc="line['interest_tax']"/></td>
                <td><t t-esc="line['total_interest']"/></td>
              </tr>
            </t>
          </table>
        </div>
      </t>
    </t>
  </template>

</odoo>