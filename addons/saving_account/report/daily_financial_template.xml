<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="daily_financial_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <table style="table-layout:fixed; table-width:full">
            <tr>
              <td>Yue Hwa Chinese Products Saving System</td>
              <td><t t-esc="form['date']"/></td>
            </tr>
          </table>
          <h5><center>Daily Financial Summary</center></h5>
          <table class="table table-bordered" style="table-layout:fixed">
            <tr>
              <th>Items</th>
              <th>Transactions</th>
              <th>Amount</th>
            </tr>
            <tr>
              <td>Total Accounts</td>
              <td><t t-esc="report['account_transaction']"/></td>
              <td><t t-esc="report['account_amount']"/></td>
            </tr>
            <tr>
              <td>Cash In</td>
              <td><t t-esc="report['cash_in_transaction']"/></td>
              <td><t t-esc="report['cash_in_amount']"/></td>
            </tr>
            <tr>
              <td>Cash Out</td>
              <td><t t-esc="report['cash_out_transaction']"/></td>
              <td><t t-esc="report['cash_out_amount']"/></td>
            </tr>
            <tr>
              <td>Total Interest</td>
              <td><t t-esc="report['total_interest_transaction']"/></td>
              <td><t t-esc="report['total_interest_amount']"/></td>
            </tr>
            <tr>
              <td>Accrued Interest</td>
              <td><t t-esc="report['accrued_interest_transaction']"/></td>
              <td><t t-esc="report['accrued_interest_amount']"/></td>
            </tr>
            <tr>
              <td>Interest Credit</td>
              <td><t t-esc="report['interest_credit_transaction']"/></td>
              <td><t t-esc="report['interest_credit_amount']"/></td>
            </tr>
          </table>
        </div>
      </t>
    </t>
  </template>

</odoo>