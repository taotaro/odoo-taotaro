<odoo>

    <record id="view_calculate_interest_tree" model="ir.ui.view">
      <field name="name">calculate_interest.tree</field>
      <field name="model">calculate_interest</field>
      <field name="arch" type="xml">
        <tree>
          <field name="entry_no" string="Entry No"/>
          <field name="account_id" string="Account" groups="hr.group_hr_user"/>
          <field name="entry_type" string="Entry Type"/>
          <field name="ledger" string="Ledger"/>
          <field name="entry_date" string="Entry Date"/>
          <field name="ref_no" string="Ref. No"/>
          <field name="amount" string="Amount"/>
        </tree>
      </field>
    </record>

